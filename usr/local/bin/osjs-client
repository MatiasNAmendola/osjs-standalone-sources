#!/bin/bash
#
# OS.js Client launcher
#
# Copyright (c) 2013 Anders Evenrud <andersevenrud@gmail.com>
# Released under the 2-clause BSD license.
#

EXEC="/opt/OS.js/client.js"
PORT=3000
USER=`whoami`
LAUNCHER="/usr/local/bin/osjs-launcher"

nohup node $EXEC $PORT $USER >/dev/null 2>&1 &
sleep 3
exec $LAUNCHER
